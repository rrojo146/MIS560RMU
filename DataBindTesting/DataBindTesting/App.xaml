<Application 
    x:Class="DataBindTesting.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"       
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone">

    <!--Application Resources-->
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundYellow" Color="Yellow"></SolidColorBrush>
        <SolidColorBrush x:Key="BackgroundAquaM" Color="Aquamarine"></SolidColorBrush>
        <SolidColorBrush x:Key="BackgroundPink" Color="Pink"></SolidColorBrush>
        <SolidColorBrush x:Key="BackgroundRed" Color="Red"></SolidColorBrush>

        <Style x:Name="ContentTextThree" TargetType="TextBlock">
            <Setter Property="Canvas.Background"
                        Value="Yellow" />
        </Style>
    </Application.Resources>

    <Application.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService 
            Launching="Application_Launching" Closing="Application_Closing" 
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
    </Application.ApplicationLifetimeObjects>

</Application>
